@model Infrastructure.Shared.ViewModel.Blog.BlogsDto

@{
    ViewData["Title"] = "Details";
}
<div class="content-wrapper">
    <div class="row grid-margin">
        <h1>Chi tiết tin tức  </h1>

        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Tiêu đề
                </dt>
                <dd class="col-sm-10">
                    @Model.title
                </dd>
                <dt class="col-sm-2">
                    Nội dung
                </dt>
                <dd class="col-sm-10">
                    @Model.content
                </dd>

                <dt class="col-sm-2">
                    Hình ảnh
                </dt>
                <dd class="col-sm-10">
                    <img src="https://localhost:5001/upload/posts/@Model.image" />
                </dd>
                <dt class="col-sm-2">
                    Tác giả
                </dt>
                <dd class="col-sm-10">
                    @Model.author
                </dd>

                <dt class="col-sm-2">
                    Tình trạng
                </dt>
                <dd class="col-sm-10">
                    @Model.status
                </dd>
                <dt class="col-sm-2">
                    Tên danh mục
                </dt>
                <dd class="col-sm-10">
                    @Model.categoryName
                </dd>
                <dt class="col-sm-2">
                    Ngày tạo
                </dt>
                <dd class="col-sm-10">
                    @Model.createDate
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Update" asp-route-id="@Model.uuid">Edit</a> |
            <a asp-action="GetAll">Back to List</a>
        </div>
    </div>
</div>