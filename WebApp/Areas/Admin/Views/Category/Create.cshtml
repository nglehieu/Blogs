@model Core.Domain.Entities.Category

@{
    ViewData["Title"] = "Create";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thêm danh mục</h4>
                    <div class="col-md-4">
                        <form asp-action="Create" id="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="uuid" />
                            <div class="form-group">
                                <label asp-for="name" class="control-label">Name</label>
                                <input asp-for="name" class="form-control" />
                                <span asp-validation-for="name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="description" class="control-label">Description</label>
                                <input asp-for="description" class="form-control" />
                                <span asp-validation-for="description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="button" value="Create" class="btn btn-primary" onclick="onConfirm()" />
                            </div>
                        </form>
                    </div>
                    <div>
                        <a asp-action="GetAll">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

<script>
    function onConfirm() {
        Swal.fire({
            title: 'Thêm mới danh mục?',
            text: "Bạn có chắc sẽ thêm mới danh mục này?",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xác nhận!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Thêm thành công!',
                    '',
                    'success'
                )
                setTimeout(function () {
                    $("#form").submit();
                }, 1000);
               
            }
        })
    }

</script>
